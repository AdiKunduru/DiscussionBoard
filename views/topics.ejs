<a href= '/index'> Go Back </a>

<h1 class = "text-center"> Latest Topics </h1>

<body class = "screen">
 

<% for(i = 0; i < details.length; i ++) { %>
 <div id = '<%= i %>' class = 'section'> 
 <a href = '<%= 'students/' + details[i].id %>' >  
  <h4> <%=details[i].title %> </h4> 
  <h6 class = "indent"> <%= details[i].excerpt %> </h6> 
  <h6 class = "indent" id = "time"> 
  	
  	<% date = new Date (details[i].created_at) %> 
  	 <%var hours = date.getHours(); %>
    <% var minutes = date.getMinutes(); %>
    <% var ampm = hours >= 12 ? 'pm' : 'am'; %>
    <% hours = hours % 12; %>
    <% hours = hours ? hours : 12; // the hour '0' should be '12' %>
    <% minutes = minutes < 10 ? '0'+minutes : minutes; %>
  	<% d = hours + ":" + minutes + ampm + " " + (date.getMonth() + 1) + '-' + date.getDate() + '-' + date.getFullYear() %>
  	<%= d %>
  
</h6>

  </a>
</div>
 <div class="divider"></div>
<% } %>

</h1>
</body>